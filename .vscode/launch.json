{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Cortex-Debug (OpenOCD + ST-LINK)",
        "type": "cortex-debug",
        "request": "launch",
        "servertype": "openocd",
        "cwd": "${workspaceFolder}",
        "executable": "${workspaceFolder}/build/stm32-min.elf",
        "device": "STM32F411RE",
        "configFiles": [
          "interface/stlink.cfg",
          "target/stm32f4x.cfg"
        ],
        "svdFile": "${workspaceFolder}/STM32F411.svd",
        "runToMain": true,
        "preLaunchTask": "build"
      }
    ]
  }
  